<div class="modal-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title"><%= title %></h4>
  </div>
  <div class="modal-body no-padding">
    <%= form_for [:admin, product], :html => { remote: true, class: "smart-form", role: "form", multipart: true }, authenticity_token: true do |f| %>
      <fieldset>
        <section>
          <%= f.label :category, "线路类型", class: "label" %>
          <%= f.label :category, class: "select" do %>
            <%= f.select :category,
            Product::CATEGORIES,
            include_blank: false %>
           <i></i>
          <% end %>
        </section>

        <section>
          <%= f.label :name, "名称", class: "label" %>
          <%= f.label :name, class: "input" do %>
            <%= f.text_field :name, placeholder: "线路名称", maxlength: 128 %>
          <% end %>
        </section>

        <section>
          <%= f.label :description, "简介", class: "label" %>
          <%= f.label :description, class: "textarea" do %>
            <%= f.text_area :description, placeholder: "", rows: 5 %>
          <% end %>
        </section>

        <section>
					<label class="label">景点</label>
          <div class="row">
          <%= collection_check_boxes(:product, :location_ids, Location.all, :id, :chinese) do |b| %>
            <div class="col col-4">
              <%= b.label(class: "checkbox") do %>
              <%= b.check_box(class: "check_box") %><i></i><%= b.text %>
              <% end %>
            </div>
          <% end %>
          </div>
					<!--
						<div class="col col-4">
							<label class="checkbox">=
								<input type="checkbox" name="checkbox" checked="checked">
								<i></i>Alexandra
              </label>
						</div>
					-->
				</section>
      </fieldset>

      <fieldset>
        <h5 style="margin-bottom: 15px;">Top deal section </h5>
        <section>
          <%= f.label :deal_order, "Top deal order", class: "label" %>
          <%= f.label :deal_order, class: "input" do %>
            <%= f.number_field :deal_order, placeholder: "0表示不在top deal里显示" %>
          <% end %>
        </section>

        <section>
          <%= f.label :deal_tag, "左上角标语", class: "label" %>
          <%= f.label :deal_tag, class: "input" do %>
            <%= f.text_field :deal_tag, placeholder: "e.g. 特价" %>
          <% end %>
        </section>

        <section>
          <%= f.label :deal_stars, "星级(0-5)", class: "label" %>
          <%= f.label :deal_stars, class: "input" do %>
            <%= f.number_field :deal_stars %>
          <% end %>
        </section>

        <section>
          <%= f.label :deal_f1, "tag1", class: "label" %>
          <%= f.label :deal_f1, class: "input" do %>
            <%= f.text_field :deal_f1, placeholder: "e.g. 7天" %>
          <% end %>
        </section>

        <section>
          <%= f.label :deal_f2, "tag2", class: "label" %>
          <%= f.label :deal_f2, class: "input" do %>
            <%= f.text_field :deal_f2, placeholder: "e.g. 最低价" %>
          <% end %>
        </section>

        <section>
          <%= f.label :deal_f3, "tag3", class: "label" %>
          <%= f.label :deal_f3, class: "input" do %>
            <%= f.text_field :deal_f3, placeholder: "e.g. 纯玩" %>
          <% end %>
        </section>

        <section>
          <%= f.label :deal_title, "top deal标题", class: "label" %>
          <%= f.label :deal_title, class: "input" do %>
            <%= f.text_field :deal_title, placeholder: "默认使用产品标题" %>
          <% end %>
        </section>

        <section>
          <%= f.label :deal_description, "top deal简介", class: "label" %>
          <%= f.label :deal_description, class: "input" do %>
            <%= f.text_field :deal_description, placeholder: "默认使用产品简介" %>
          <% end %>
        </section>
      </fieldset>

      <footer>
        <button type="submit" class="btn btn-primary" data-loading-text="<i class='fa fw fa-circle-o-notch fa-spin '></i> Processing...">
          Submit
        </button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </footer>
    <% end %>
  </div>
</div>
