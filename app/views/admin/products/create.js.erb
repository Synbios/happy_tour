<% if @product.errors.any? %>
toastr.error("<%= @product.errors.full_messages.join('<br>') %>");


<% else %>
  $('#mod-product-input .modal-content').html('');
  $('#mod-product-input').modal("hide");

  $('#products_table').DataTable().row.add( <%= render partial: 'row.js.erb', locals: { product: @product } %> ).page('last').draw(false);

  $('#mod-product-input form').find('input:text, input:password, input:file, select, textarea').val('');
  $('#mod-product-input form').find('input:radio, input:checkbox').removeAttr('checked').removeAttr('selected');
<% end %>
