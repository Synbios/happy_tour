{
  'DT_RowId': '<%= product.id %>',
  'category': '<%= product.category %>',
  'name': '<%= product.name %>',
  'points': '<%= link_to "#{product.product_points.count} features", admin_product_product_points_path(product), remote: true %>',
  'slide_images': '<%= link_to "#{product.product_slides.count} images", admin_product_product_slides_path(product), remote: true %>',
  'options': '<%= link_to "#{product.product_options.count} options", admin_product_product_options_path(product), remote: true %>',
  'days': '<%= link_to "#{product.product_dates.count} days", admin_product_product_dates_path(product), remote: true %>',
  'created_at': '<%= product.created_at.strftime("%Y年%m月%d日") %>',
  'actions': '<%= link_to("修改", edit_admin_product_path(product), remote: true, class: "btn btn-info btn-xs").html_safe %> '
  + '<%= link_to("删除", admin_product_path(product), remote: true, method: :delete, data: { confirm: '确定要删除该产品吗?' }, class: "btn btn-danger btn-xs").html_safe %> '
