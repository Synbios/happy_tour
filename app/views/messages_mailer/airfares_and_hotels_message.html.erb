}

.content_table tr:nth-child(even){background-color: #f2f2f2;}

.content_table tr:hover {background-color: #ddd;}

.content_table th {
  padding-top: 8px;
  padding-bottom: 8px;
  text-align: left;
  background-color: #936A50;
  color: white;
}

.mb-4 {
  margin-bottom: 40px;
}
