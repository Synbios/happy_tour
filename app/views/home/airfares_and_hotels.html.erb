          </div>

          <%= form_tag(messages_path, method: :post, class: "commentsForm", id: "airfares_and_hotels_form") do %>
            <h3>机票预订</h3>
            <div class="row">
              <div class="col-xs-12">
                <div class="form-group">
                  <%= text_field_tag :name, nil, placeholder: "姓名", class: "form-control", required: true %>
                </div>
              </div>
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                  <div class="checkbox_group">
                    <label class="title">性别</label>
                    <label class="radio-inline">
                      <input type="radio" name="gender" value="male" checked> 男
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="gender" value="female"> 女
                    </label>
                  </div>
                </div>
              </div>
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                  <%= text_field_tag :dob, nil, placeholder: "出生日期", class: "form-control form_datepicker", required: true %>
                </div>
              </div>
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                  <%= text_field_tag :departure_date, nil, placeholder: "出发日期", class: "form-control form_datepicker", required: true %>
                </div>
              </div>
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                  <%= text_field_tag :return_date, nil, placeholder: "回程日期", class: "form-control form_datepicker", required: true %>
                </div>
              </div>
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                  <%= text_field_tag :from, nil, placeholder: "居住地", class: "form-control", required: true %>
                </div>
              </div>
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                  <%= text_field_tag :to, nil, placeholder: "目的地", class: "form-control", required: true %>
                </div>
              </div>
              <div class="col-xs-12">
                <div class="form-group">
                  <div class="checkbox_group">
                    <label class="title">舱位要求</label>
                    <label class="radio-inline">
                      <input type="radio" name="seat" value="economy" checked> 经济舱
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="seat" value="business"> 商务舱
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="seat" value="window"> 靠窗
                    </label>
                  </div>
                </div>
              </div>
              <div class="col-xs-12">
                <div class="form-group">
                  <%= text_area_tag :comments, nil, placeholder: "其他要求", class: "form-control", rows: 3 %>
                </div>
              </div>
            </div>

            <button type="submit" class="btn buttonCustomPrimary">提交</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
