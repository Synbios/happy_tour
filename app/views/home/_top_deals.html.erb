<section class="mainContentSection packagesSection">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="sectionTitle">
          <h2><span class="lightBg">Our Top Deals</span></h2>
          <p></p>
        </div>
      </div>
    </div>
    <div class="row">
      <% Product.where("deal_order > 0").order(deal_order: :asc).limit(6).each do |product| %>
        <%= render partial: "products/card.html.erb", locals: {product: product} %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="btnArea">
          <%= link_to "所有线路", products_path, class: "btn buttonTransparent" %>
        </div>
      </div>
    </div>
  </div>
</section>
