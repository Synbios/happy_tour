  </div>
</section>

<!-- WHITE SECTION-->
<section class="mainContentSection">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-5 col-lg-4 col-xs-12">
        <div class="contactInfo">
          <h2>客户回馈</h2>
          <p>您宝贵的意见可以帮助我们做得更好!</p>
          <div class="media">
            <a class="media-left" href="#">
              <i class="fa fa-map-marker" aria-hidden="true"></i>
            </a>
            <div class="media-body">
              <h4 class="media-heading">地址/address</h4>
              <p>7151 No.5 Rd<br>Richmond V6Y 2V3, BC Canada</p>
            </div>
          </div>
          <div class="media">
            <a class="media-left" href="#">
              <i class="fa fa-phone" aria-hidden="true"></i>
            </a>
            <div class="media-body">
              <h4 class="media-heading">电话/Phone number</h4>
              <p>
                +1 604 636-8588(加拿大)<br>
                95040386366(中国免费专线)
              </p>
            </div>
          </div>
          <div class="media">
            <a class="media-left" href="#">
              <i class="fa fa-envelope" aria-hidden="true"></i>
            </a>
            <div class="media-body">
              <h4 class="media-heading">电子邮件/email</h4>
              <p><a href="mailTo:service@happytourcanada.com">service@happytourcanada.com</a></p>
            </div>
          </div>
          <div class="media">
            <a class="media-left" href="#">
              <i class="fa fa-envelope" aria-hidden="true"></i>
            </a>
            <div class="media-body">
              <h4 class="media-heading">电子邮件/email</h4>
              <p>
                <a href="mailTo:service@happytourcanada.com">service@happytourcanada.com</a>
                <br>微信: letu_trip
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-6 col-md-7 col-xs-12 col-lg-8">
        <div class="contactForm">
          <%= form_tag(messages_path, method: :post, class: "form", id: "contact_form") do %>
            <div class="form-group">
              <%= text_field_tag :name, nil, placeholder: "姓名/Name", class: "form-control", required: true %>
            </div>
            <div class="form-group">
              <%= email_field_tag :email, nil, placeholder: "邮箱/Email", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= text_field_tag :phone, nil, placeholder: "电话/Phone", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= text_area_tag :content, nil, placeholder: "问题和反馈/Message", class: "form-control", required: true %>
            </div>
            <button type="submit" class="btn buttonCustomPrimary">提交咨询</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

