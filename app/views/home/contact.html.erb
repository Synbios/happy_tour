<% content_for :header_class do %>lightHeader<% end %>
<% content_for :javascript do %>
<script>
  $(document).ready(()=>{
    $("#contact_form").validate({
      submitHandler: function (form) {
         $.ajax({
           type: "POST",
           dataType: "JSON",
           url: "<%= messages_path(type: :contact) %>",
           data: $(form).serialize(),
           success: function (response) {
             Swal.fire(
              'Thank you',
              '您所填写的内容已经被发送至service@happytourcanada.com,我们的客户代表将在24小时内与您联系!',
              'success'
            );
            $('form').find('input:text, input:password, input:file, select, textarea').val('');
           }
         });
         return false;
       }
    });
  });
</script>
<% end %>

<!-- PAGE TITLE -->
