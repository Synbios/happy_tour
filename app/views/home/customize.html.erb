          </div>

          <%= form_tag(messages_path, method: :post, class: "commentsForm", id: "customize_form") do %>
            <h3>定制信息</h3>
            <div class="row">
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                  <%= text_field_tag :start_date, nil, placeholder: "出发日期", class: "form-control form_datepicker", required: true %>
                </div>
              </div>
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                  <%= text_field_tag :end_date, nil, placeholder: "结束日期", class: "form-control form_datepicker", required: true %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                  <%= text_field_tag :number_of_people, nil, placeholder: "人数", class: "form-control", required: true %>
                </div>
              </div>
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">

                  <div class="checkbox_group">
                    <label class="title">酒店星级</label>
                    <label class="radio-inline">
                      <input type="radio" name="hotel" value="five" checked> 五星
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="hotel" value="four"> 四星
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="hotel" value="three"> 三星
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="hotel" value="below_three"> 三星以下
                    </label>

                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                  <%= text_field_tag :destination, nil, placeholder: "目的地", class: "form-control", required: true %>
                </div>
              </div>
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                  <%= text_field_tag :activities, nil, placeholder: "游玩项目", class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <div class="form-group">
                  <div class="checkbox_group">
                    <label class="title">车辆要求</label>
                    <label class="radio-inline">
                      <input type="radio" name="bus" value="7座豪华商务车" checked> 7座豪华商务车
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="bus" value="11座奔驰小巴"> 11座奔驰小巴
                    </label>
                  </div>
                </div>
              </div>
              <div class="col-xs-12">
                <div class="form-group">
                  <%= text_area_tag :comments, nil, placeholder: "其他要求", class: "form-control", rows: 3 %>
                </div>
              </div>
            </div>
            <br>
            <h3>联系人信息</h3>
            <div class="row">
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                  <%= text_field_tag :contact_name, nil, placeholder: "姓名", class: "form-control", required: true %>
                </div>
              </div>
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                  <%= text_field_tag :contact_phone, nil, placeholder: "电话", class: "form-control", required: true %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                  <%= email_field_tag :contact_email, nil, placeholder: "邮箱", class: "form-control" %>
                </div>
              </div>
              <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                  <%= text_field_tag :contact_wechat, nil, placeholder: "微信", class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <div class="form-group">
                  <div class="checkbox_group">
                    <label class="title">首选联系方式</label>
                    <label class="radio-inline">
                      <input type="radio" name="preferred_contact" value="phone" checked> 电话
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="preferred_contact" value="email"> 邮件
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="preferred_contact" value="wechat"> 微信
                    </label>
                  </div>
                </div>
              </div>
            </div>
            <button type="submit" class="btn buttonCustomPrimary">提交</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
